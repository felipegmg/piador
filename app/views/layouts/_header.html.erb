<header>
  
  <%= link_to logo, root_path %>
  <nav class="round">
    <ul>
      <% if signed_in? %>
      <li><%= link_to "Profile", current_user %></li>
      <% else %>
      <li><%= link_to "Pagina Principal", root_path %></li>
      <% end %>
      <li><%= link_to "Ajuda", help_path %></li>
      <% if signed_in? %>
      <li><%= link_to "Logout", signout_path, :method => :delete %></li>
      <% else %>
      <li><%= link_to "Login", signin_path %></li>
      <% end %>
    </ul>
  </nav>
</header>
